{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "lib": ["es2018", "dom"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist", "tests", "examples"]
  }